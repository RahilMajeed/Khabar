<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:background="@color/light_gray_background_color"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivScienceImage"
        android:layout_width="120dp"
        android:background="@color/white"
        android:layout_height="120dp"
        android:elevation="1dp"
        app:strokeWidth="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dp"
        app:shapeAppearance="@style/RoundedImageStyle"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:paddingStart="110dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/bottom_start_rounded_corner_shape"
        android:layout_height="110dp">

    <TextView
        android:id="@+id/tvScience"
        android:text="This Is My First App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DE000000"
        android:textSize="14sp"
        />

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/tvNewsDesc"
            android:textSize="11sp"
            android:text="Romanticism was a wave of literary expression that originated in Europe towards the end of the 18th century. Characterized by its emphasis on emotional and spiritual values as well as its deep engagement with nature and the Self, Romanticism caused a revolutionary stir in the history of English poetry and rhythmic compositions."
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="#66000000"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingEnd="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="15 hours ago"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:textColor="#66000000"
                />

            <ImageButton
                android:id="@+id/bttnBookMark"
                android:src="@drawable/ic_bookmark"
                app:tint="@color/orange"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

    </LinearLayout>

</FrameLayout>