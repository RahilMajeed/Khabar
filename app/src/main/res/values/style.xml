<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Profile image style-->
    <style name="CircleImageStyle" parent="">
        <item name="cornerSize">50dp</item>
    </style>
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTextAppearance</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabBackground">@color/white</item>
    </style>
    <style name="CustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
        <item name="rippleColor">@color/orange</item>
    </style>

</resources>